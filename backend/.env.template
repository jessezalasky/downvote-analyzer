# Environment
NODE_ENV=development  # Options: development, staging, production

# Server Configuration
PORT=5000
HOST=0.0.0.0
API_BASE_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000  # Comma-separated list for CORS

# Reddit API Credentials
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=DownvoteAnalyzer/1.0

# Database Configuration
DB_PATH=reddit_downvotes.db  # SQLite for development
# DB_PATH=/path/to/production/reddit_downvotes.db  # Uncomment for production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=downvoter.log
LOG_MAX_BYTES=1048576  # 1MB
LOG_BACKUP_COUNT=7

# Collection Settings
COLLECTION_WINDOW_HOURS=24
COLLECTION_DELAY_HOURS=2
COLLECTION_TIME_UTC=21  # 9 PM UTC daily collection